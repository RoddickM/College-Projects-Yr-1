class Budget:
    def __init__(self, food, clothing, entertainment, gadgets):
        self.food_budget = food
        self.clothing_budget = clothing
        self.entertainment_budget = entertainment
        self.gadgets_budget = gadgets

    def deposit(self):
        food_deposit = float(input("How much would you like to deposit for the food budget: £"))
        clothing_deposit = float(input("How much would you like to deposit for the clothing budget: £"))
        entertainment_deposit = float(input("How much would you like to deposit for the entertainment budget: £"))
        gadgets_budget = float(input("How much would you like to deposit for the gadgets budget: £"))

        self.food_budget += food_deposit
        self.clothing_budget += clothing_deposit
        self.entertainment_budget += entertainment_deposit
        self. gadgets_budget += gadgets_budget

    def withdraw(self):
        food_deposit = float(input("How much would you like to withdraw from the food budget: £"))
        clothing_deposit = float(input("How much would you like to withdraw from the clothing budget: £"))
        entertainment_deposit = float(input("How much would you like to withdraw from the entertainment budget: £"))
        gadgets_budget = float(input("How much would you like to withdraw from the gadgets budget: £"))

        self.food_budget += food_deposit
        self.clothing_budget += clothing_deposit
        self.entertainment_budget += entertainment_deposit
        self. gadgets_budget += gadgets_budget


budget = Budget(0, 0, 0, 0)

print("[ 1 ] Deposit to budgets")
print("[ 2 ] Withdraw from budgets")
print("[ 3 ] View budgets")
choose = int(input("Enter the number next to the action you want to do: "))

if choose == 1:
    budget.deposit()
